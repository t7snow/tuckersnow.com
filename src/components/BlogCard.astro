---
import { getCollection } from 'astro:content';
import { Image } from 'astro:assets';

const blogposts = await getCollection('blogposts');

const { post } = Astro.props;
---

<section class="group mx-auto w-full rounded-xl px-4 py-3 transition duration-300 ease-in-out hover:bg-gray-800">
  <div class="blog-card-content">
    <a href={`/blog/${post.slug}`} class="blog-card-link">
      <h4 class="blog-card-title">{post.data.title}</h4>
      <p class="blog-card-description">{post.data.description}</p>
    </a>
  </div>
</section>

