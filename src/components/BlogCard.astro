---
import { getCollection } from 'astro:content';
import { Image } from 'astro:assets';

const blogposts = await getCollection('blogposts');

const { post } = Astro.props;
---

<div class="group mx-auto w-full rounded-xl px-4 py-3 transition duration-300 ease-in-out hover:bg-gray-200">
  <a href={`/blog/${post.slug}`} class="">
    <h4 class="text-lg text-gray-950 group-hover:text-green-400 md:text-xl">{post.data.title}</h4>
    <p class="text-gray-700">{post.data.description}</p>
  </a>
</div>

