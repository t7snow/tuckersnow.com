---
import { getCollection } from 'astro:content';
import { Image } from 'astro:assets';

const blogposts = await getCollection('blogposts');

const { post } = Astro.props;
---

<div class="group mx-auto w-full rounded-xl px-4 py-3 transition duration-300 ease-in-out hover:bg-gray-200">
  <a href={`/blog/${post.slug}`} class="">
    <h4 class="text-base text-gray-950 group-hover:text-green-400 font-semibold">{post.data.title || 'Untitled Post'}</h4>
    <p class="text-sm text-gray-700 mb-1">{post.data.description || 'No description available.'}</p>
    {post.data.date && (
      <span class="text-xs text-gray-500">{new Date(post.data.date).toLocaleDateString(undefined, { year: 'numeric', month: 'short', day: 'numeric' })}</span>
    )}
  </a>
</div>

