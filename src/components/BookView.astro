---
import { getCollection } from 'astro:content';
import BookCard from './BookCard.astro';

// Fetch and sort blog posts
const bookposts = await getCollection('bookposts');
 // Display only the 3 most recent posts
---
<section>
  <h1>🧑‍💻 Book Notes</h2>
    {bookposts.map((post) => (
      <BookCard post={post} />
    ))}
</section>